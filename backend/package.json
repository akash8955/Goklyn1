{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for the portfolio website",
  "main": "server.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon --inspect server.js",
    "debug": "cross-env NODE_ENV=development node --inspect server.js",
    "test": "cross-env NODE_ENV=test mocha --timeout 10000 --exit",
    "test:watch": "npm test -- --watch",
    "test:coverage": "nyc --reporter=text mocha",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json}\"",
    "docker:build": "docker build -t backend .",
    "docker:run": "docker run -p 5000:5000 backend",
    "prepare": "echo 'Skipping husky install for now' && exit 0"
  },
  "keywords": [
    "node",
    "express",
    "mongodb",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cors": "^2.8.5",
    "exifr": "^7.1.3",
    "express": "4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.8.0",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "http-status": "^1.5.3",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "9.0.2",
    "module-alias": "2.2.3",
    "mongoose": "7.5.0",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "6.9.5",
    "pug": "3.0.3",
    "reading-time": "^1.5.0",
    "sharp": "^0.34.2",
    "slugify": "^1.6.6",
    "streamifier": "^0.1.1",
    "winston": "3.10.0",
    "winston-daily-rotate-file": "4.7.1",
    "xss": "1.0.15",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "chai": "4.3.7",
    "chai-http": "4.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.1",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.3",
    "mocha": "10.2.0",
    "mock-require": "3.0.3",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "3.0.1",
    "nyc": "15.1.0",
    "prettier": "3.0.3",
    "sinon": "15.2.0",
    "supertest": "6.3.3"
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude": [
      "**/*.test.js",
      "**/test/**",
      "**/node_modules/**"
    ]
  },
  "_moduleAliases": {
    "@root": ".",
    "@config": "./config",
    "@controllers": "./controllers",
    "@models": "./models",
    "@routes": "./routes",
    "@utils": "./utils"
  }
}
